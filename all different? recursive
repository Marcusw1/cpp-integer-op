
//recursively check if all digits in integer are different

int r_alldifferent(int k)
{
    int curr = k%10;
    int temp = k/10;
    
    if(k/10 == 0) return 1;
    
    while(k%10 > 0)
    {
        if(k%10 == (k/10)%10) return 0;
        k = k/10;
    }
    
    return r_alldifferent(temp);
}

